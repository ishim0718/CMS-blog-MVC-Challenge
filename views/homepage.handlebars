{{#each blogposts as |blogpost| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>{{blogpost.content}}</p>
    <p>Created by {{blogpost.user.name}} on {{format_date blogpost.date_created}}</p>
  </div>
</div>
{{/each}}
